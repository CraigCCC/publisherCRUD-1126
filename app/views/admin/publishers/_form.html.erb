<ul>
  <% if publisher.errors.any? %>
    <% publisher.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= form_for ([:admin, publisher]) do |f| %>
  <div class="columns">
    <div class="column is-3">
      <div class="field">
        <%= f.label :name, "名稱", class: "label" %>
        <%= f.text_field :name, class: "input" %>
      </div>
    </div>
    
    <div class="column is-3">
      <div class="field">
        <%= f.label :tel, "電話", class: "label" %>
        <%= f.telephone_field :tel, type: 'tel', class: "input", placeholder: '0X-00000000, 09XX-XXXXXX' %>
      </div>
    </div>
    
    <div class="column is-6">
      <div class="field">
        <%= f.label :address, "地址", class: "label" %>
        <%= f.text_field :address, class: "input" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :note, "備註", class: "label" %>
    <%= f.text_area :note, class: "textarea" %>
  </div>

  <div class="field">
    <%= f.label :online, "還活者？", class: "checkbox" %>
    <%= f.check_box :online, type: "checkbox" %>
  </div>

  <div class="field">
    <%= f.submit class: "button is-success"%>
    <%= link_to "Cancel", admin_publishers_path, class: "button is-light"%>
  </div>
<% end %>