<h1 class="title">出版社列表</h1>
<%= link_to "新增出版社", new_admin_publisher_path, class: "button is-dark is-rounded"%>

<table class="table is-striped is-fullwidth">
  <thead>
    <tr>
      <th>名稱</th>
      <th>電話</th>
      <th>地址</th>
      <th>備註</th>
      <th>活著嗎</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @publishers.each do |publisher| %>
    <tr>
      <th>
        <%= link_to publisher.name, admin_publisher_path(publisher)%>
      </th>
      <td>
        <%= publisher.tel%>
      </td>
      <td>
        <%= publisher.address%>
      </td>
      <td>
        <%= publisher.note%>
      </td>
      <td>
        <%= publisher.online%>
      </td>
      <td>
        <%= link_to "編輯", edit_admin_publisher_path(publisher), class: "button is-link is-small is-rounded"%>
        <%= link_to "刪除", admin_publisher_path(publisher), method: "delete", class: "button is-danger is-small is-rounded",data: { confirm: '確定要刪除？'}%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>